/* Button CSS Starts*/

.btn-app {
    background: #0BAEEF;
    color: #FFFFFF;
    padding: 12px 40px;
    border: solid 1px #1292C1;
    border-radius: 0;
}
/* Button CSS Ends */

input[type="file"]:focus,
input[type="checkbox"]:focus,
input[type="radio"]:focus {
    outline: none;
    outline-offset: 0px;
}

input[type="checkbox"],
input[type="radio"] {
    outline: none;
}

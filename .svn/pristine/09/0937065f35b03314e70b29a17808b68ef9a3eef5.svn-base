/* Bootstrap row override */

.row {
    margin: 0px;
}

/* Same height bootstrap column Issue fix */

.equal,
.equal > div[class*='col-'] {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    flex: 1 0 auto;
}

.form-control.nobrdradius {
    border-radius: 0;
}

html,
body {
    height: 100%;
}
